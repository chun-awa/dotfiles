set $mod Mod1
set $super Mod4
# 设置字体
font pango:JetBrains Mono NF 10
# 退出窗口
bindsym $mod+Shift+q kill
# 移动窗口
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# 全屏
bindsym $mod+f fullscreen toggle
# 切换平铺/浮动
bindsym $mod+Shift+space floating toggle
# 工作区
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
# 切换工作区
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
# 将窗口移动到工作区
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
# 重新启动i3
bindsym $mod+Shift+r restart
# 调整窗口大小
bindsym $mod+ctrl+Left resize shrink width 10 px or 10 ppt
bindsym $mod+ctrl+Down resize grow height 10 px or 10 ppt
bindsym $mod+ctrl+Up resize shrink height 10 px or 10 ppt
bindsym $mod+ctrl+Right resize grow width 10 px or 10 ppt
# 调整窗口边框
new_window none
new_float normal
hide_edge_borders both
bindsym $mod+b border toggle
gaps inner 8
gaps outer 6
# 自启程序
exec --no-startup-id xcompmgr
exec --no-startup-id fcitx5
exec --no-startup-id flameshot
exec --no-startup-id xfce4-clipman
exec --no-startup-id xfce4-power-manager
exec --no-startup-id /usr/lib/xfce4/notifyd/xfce4-notifyd
exec --no-startup-id feh --bg-fill /usr/share/backgrounds/xfce/xfce-leaves.svg
exec --no-startup-id polybar
# 绑定键位(启动程序)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m '请选择一个选项' -f 'pango:JetBrainsMono NF 10' -B '退出i3' 'i3-msg exit' -B '关机' 'systemctl poweroff' -B '重启' 'systemctl reboot'"
bindsym Print exec --no-startup-id flameshot full -c
bindsym ctrl+$mod+a exec --no-startup-id flameshot gui
bindsym $mod+Tab exec --no-startup-id rofi -show window -font "JetBrainsMono NF 12"
bindsym $mod+Return exec kitty
bindsym $super+r exec --no-startup-id rofi -show drun -font "JetBrainsMono NF 12"
bindsym $super+c exec --no-startup-id chromium

